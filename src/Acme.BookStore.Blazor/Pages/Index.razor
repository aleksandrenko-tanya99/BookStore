@page "/"
@using Volo.Abp.MultiTenancy
@inherits BookStoreComponentBase
@inject ICurrentTenant CurrentTenant
@inject AuthenticationStateProvider AuthenticationStateProvider
<div class="container">
    
    <div class="main_page">
        <style>
            .main_page {
                background-image: url(https://images.wallpaperscraft.com/image/book_old_pen_table_vase_rose_red_76972_1280x720.jpg);
                position: fixed;
                top: 63px;
                left: 0;
                height: 100%;
                width: 100%;
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover;
            }
            
        </style>
        <div class="p-5 text-center">
            <Badge Color="Color.Dark" class="mb-4">
                <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>BookStore</strong> is successfully running!</h5>
            </Badge>

            <h1>The Best Libraries That<br> Every Book Lover Must<br> Visit!</h1>

            <p class="lead px-lg-5 mx-lg-5">Welcome to the application. This is a startup project based on the ABP framework.</p>

            @if (!CurrentUser.IsAuthenticated)
            {
    <a class="btn btn-primary" href="/authentication/login">
        <i class="fa fa-sign-in-alt"></i> @L["Login"]
    </a>}
        </div>


    </div>
    
</div>
